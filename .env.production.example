# Production Environment Configuration Template
# Copy this to .env.production and update with your actual values

# Application Configuration
NODE_ENV=production
NEXT_TELEMETRY_DISABLED=1

# Supabase Configuration - Replace with your actual values
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Application Settings
NEXT_PUBLIC_APP_NAME="Sistem Absen Karyawan"
NEXT_PUBLIC_APP_DESCRIPTION="Sistem Absen Karyawan with face recognition"
NEXT_PUBLIC_COMPANY_NAME="Your Company Name"

# Face Recognition Configuration
NEXT_PUBLIC_FACE_RECOGNITION_ENABLED=true
NEXT_PUBLIC_FACE_RECOGNITION_THRESHOLD=0.7
NEXT_PUBLIC_FACE_RECOGNITION_MODEL=face-api

# Office Configuration
NEXT_PUBLIC_OFFICE_NAME="Your Office Name"
NEXT_PUBLIC_OFFICE_TIMEZONE="Asia/Jakarta"
NEXT_PUBLIC_OFFICE_WORK_START="08:00"
NEXT_PUBLIC_OFFICE_WORK_END="17:00"
NEXT_PUBLIC_OFFICE_BREAK_START="12:00"
NEXT_PUBLIC_OFFICE_BREAK_END="13:00"

# Security Configuration - Use strong, unique values in production
JWT_SECRET=your-super-secure-jwt-secret-key-minimum-32-characters
SESSION_SECRET=your-super-secure-session-secret-key-minimum-32-characters
NEXT_PUBLIC_ENCRYPTION_KEY=your-super-secure-32-character-encryption-key

# CORS Configuration - Update with your actual domain
NEXT_PUBLIC_APP_URL=https://your-domain.com
ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com

# Production Configuration
NEXT_PUBLIC_DEBUG_MODE=false
NEXT_PUBLIC_DEV_TOOLS=false

# Admin Configuration - Use strong, unique values
ADMIN_SEED_TOKEN=your-super-strong-random-admin-seed-token
ALLOW_DEV_ADMIN_SEED=false
ADMIN_EMAIL=admin@your-domain.com
ADMIN_PASSWORD=your-super-secure-admin-password
ADMIN_NAME=System Administrator

# Demo Credentials Configuration - DISABLE IN PRODUCTION
ALLOW_DEMO_CREDENTIALS=false
# Public Admin Credentials - DO NOT use in production
# NEXT_PUBLIC_ADMIN_EMAIL=admin@your-domain.com

# Security Headers Configuration
ENABLE_SECURITY_HEADERS=true
ENABLE_CSP=true
ENABLE_RATE_LIMITING=true

# Database Configuration (if using external database)
DATABASE_URL=your-database-connection-string

# Email Configuration (for notifications)
SMTP_HOST=your-smtp-host
SMTP_PORT=587
SMTP_USER=your-smtp-user
SMTP_PASSWORD=your-smtp-password
FROM_EMAIL=noreply@your-domain.com
FROM_NAME=Your Company Name

# Monitoring and Logging
ENABLE_ERROR_REPORTING=true
ENABLE_PERFORMANCE_MONITORING=true
LOG_LEVEL=error